{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.c",
                "map.c",
                "mario.c",
                "input.c",
                "render.c",
                "camera.c",
                "blocks.c",
                "-I", "/opt/homebrew/include",
                "-L", "/opt/homebrew/lib",
                "-o",
                "${fileDirname}/mario",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
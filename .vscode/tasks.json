{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "scripts/main.c",
                "scripts/map.c",
                "scripts/mario.c",
                "scripts/input.c",
                "scripts/render.c",
                "scripts/camera.c",
                "scripts/blocks.c",
                "scripts/enemy.c",
                "-I", "/opt/homebrew/include/SDL2",
                "-D_THREAD_SAFE",
                "-L", "/opt/homebrew/lib",
                "-o",
                "mario_game",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}